<UserControl x:Class="SoluiNet.DevTools.Core.UI.UIElement.TwoActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoluiNet.DevTools.Core.UI.UIElement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="TwoActionButtonGrid" AllowDrop="True" PreviewDragEnter="TwoActionButtonGrid_PreviewDragEnter" PreviewDragLeave="TwoActionButtonGrid_PreviewDragLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="FirstColumn" />
            <ColumnDefinition x:Name="SecondColumn" MaxWidth="0" />
        </Grid.ColumnDefinitions>
        <Button x:Name="PrimaryAction" Grid.Column="0" />
        <Button x:Name="SecondaryAction" Grid.Column="1" />
    </Grid>
</UserControl>
