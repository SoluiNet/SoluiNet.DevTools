<UserControl x:Class="SoluiNet.DevTools.Utils.Certificate.CertificateUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoluiNet.DevTools.Utils.Certificate"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="CertificateUrl" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="5,5,0,0" />
        <Button x:Name="GetInformation" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="75" Margin="160, 5, 0, 0" Content="Get Info" Click="GetInformation_Click" />
        <TextBox x:Name="InformationBox" Margin="5, 40, 5, 5" />
    </Grid>
</UserControl>
