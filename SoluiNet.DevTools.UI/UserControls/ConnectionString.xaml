<UserControl x:Class="SoluiNet.DevTools.UI.UserControls.ConnectionString"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoluiNet.DevTools.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="800">
    <Grid x:Name="ContentGrid">
        <TextBox x:Name="ConnectionStringName" Height="25" Margin="10,10,40,0" TextWrapping="Wrap" Text="" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="ConnectionStringValue" Height="25" Margin="165,10,40,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="AdditionalInfo" Content="..." HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="25" Height="25" Click="AdditionalInfo_Click"/>
    </Grid>
</UserControl>
