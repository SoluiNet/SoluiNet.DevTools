<UserControl x:Class="SoluiNet.DevTools.DataExchange.Jira.JiraUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoluiNet.DevTools.DataExchange.Jira"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="ExecuteJql" Content="Get JIRA Tickets per JQL" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="200" Height="25" Click="ExecuteJql_Click"/>
        <TextBox x:Name="JqlStatement" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="JQL" VerticalAlignment="Top" Width="550"/>
        <DataGrid x:Name="JiraResults" Margin="5,70,5,5" Visibility="Hidden"/>
        <TextBox x:Name="JiraResultText" Margin="5,70,5,5"/>
    </Grid>
</UserControl>
