<UserControl x:Class="SoluiNet.DevTools.Utils.WebClient.WebClientAdditionalOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoluiNet.DevTools.Utils.WebClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="OptionMainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Key" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="0" Margin="5" />
        <TextBox x:Name="Value" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="1" Margin="5" />
        <Button x:Name="RemoveElement" Content="-" Height="25" Width="25" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="2" Margin="5" />
    </Grid>
</UserControl>
