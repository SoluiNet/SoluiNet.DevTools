<UserControl x:Class="SoluiNet.DevTools.Utils.Clipboard.ClipboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoluiNet.DevTools.Utils.Clipboard"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid>
        <DataGrid x:Name="ClipboardDataGrid" Margin="5,5,5,5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timepoint" Binding="{Binding Timepoint}" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                <DataGridTextColumn Header="Content" Binding="{Binding ClipboardContent}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
