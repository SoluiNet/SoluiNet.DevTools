<ui:SoluiNetWindow x:Class="SoluiNet.DevTools.UI.Sql.ShowText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:SoluiNet.DevTools.UI.Sql"
        xmlns:ui="clr-namespace:SoluiNet.DevTools.Core.UI;assembly=SoluiNet.DevTools.Core"
        mc:Ignorable="d"
        Title="Show SQL Text - SoluiNet.DevTools" TitleFormatString="Show SQL Text ({0}) - SoluiNet.DevTools" Height="450" Width="800">
    <Grid>
        <avalonEdit:TextEditor Name="TextToShow" FontFamily="Consolas" SyntaxHighlighting="SQL" FontSize="10pt" Foreground="GhostWhite" Margin="5,5,5,35" Background="#FF303030" ShowLineNumbers="True" />
        <Button Name="FormatSQL" Content="Format SQL" HorizontalAlignment="Left" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="120" Height="25" Click="FormatSQL_Click"/>
        <Button Name="CloseWindow" Content="Close" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" Height="25" Click="CloseWindow_Click"/>
    </Grid>
</ui:SoluiNetWindow>
